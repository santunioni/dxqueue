{
  "name": "dxqueue",
  "version": "0.2.1",
  "description": "Improve developer experience using the remote command pattern",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/santunioni/dxqueue",
  "readme": "README.md",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public",
    "tag": "latest"
  },
  "maintainers": [
    {
      "name": "Vinícius Vargas",
      "email": "santunionivinicius@gmail.com"
    }
  ],
  "scripts": {
    "build": "tsc",
    "local": "prettier --write . && npm run test:unit && npm run test:acceptance",
    "infra:up": "docker-compose up --wait -d",
    "infra:down": "docker-compose down",
    "test:unit": "jest . --testRegex \".unit.ts$\"",
    "test:acceptance": "npm run build && jest . --testRegex \".acceptance.ts$\"",
    "prepare": "husky install",
    "prepublish": "tsc"
  },
  "author": "Vinícius Vargas <santunionivinicius@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "dd-trace": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".*\\.(unit|acceptance)\\.ts$"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": false,
    "endOfLine": "lf"
  }
}
