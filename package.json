{
  "name": "dxqueue",
  "version": "0.1.0",
  "description": "Improve developer experience using the remote command pattern",
  "main": "src/index.ts",
  "repository": "https://github.com/santunioni/dxqueue",
  "readme": "README.md",
  "scripts": {
    "test": "docker-compose up --wait -d && jest .",
    "prepare": "husky install"
  },
  "author": "Vin√≠cius Vargas <santunionivinicius@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-sqs": "^3.0.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".*\\.(unit|acceptance)\\.ts$"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": false,
    "endOfLine": "lf"
  }
}
